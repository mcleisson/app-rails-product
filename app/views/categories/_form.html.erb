          <div class="col-12">
            <h2 class="tm-block-title d-inline-block">Novo Categoria</h2>
          </div>
        </div>
        <div class="row tm-edit-product-row">
          <div class="col-xl-6 col-lg-6 col-md-12">
            <form action="" class="tm-edit-product-form">
              <div class="form-group mb-3">
                <%= form.label I18n.t('category.name') %>
                <%= form.text_field :name, class: "form-control" %>
              </div>
              <div class="form-group mb-3">
                <%= form.label I18n.t('category.description') %>
                <%= form.text_area :description, class: "form-control", rows: "5", id: "area1" %>
